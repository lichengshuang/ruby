	<script>
		$(document).ready(function() {
			// 提交
			$("#submit").click(function() {
				var username = $.trim($("#username").val());
				var isValid = true;

				if (username == '如：test@163.com' || username == '') {
					$("#username_tips").html('用户名必须填写！');
					$("#username_tips").show();
					isValid = false;
				} else {
					$("#username_tips").hide();
				}
				
				var nickname = $.trim($("#nickname").val());
				if (nickname == '如：小马哥'||nickname=='') {
					$("#nickname_tips").html('昵称必须填写！');
					$("#nickname_tips").show();
					isValid = false;
				}else {
					$("#nickname_tips").hide();
				}

				var password = $.trim($("#password").val());
				if (password == '') {
					$("#password_tips").html('密码必须填写！');
					$("#password_tips").show();
					isValid = false;
				} else {
					$("#password_tips").hide();
				}
				var captcha = $.trim($("#captcha").val());
				if (captcha == '') {
					$("#captcha_tips").html('验证码必须填写！');
					$("#captcha_tips").show();
					isValid = false;
				} else {
					$("#captcha_tips").hide();
				}
				var checked = $("#agreement").attr("checked");
				if (checked != 'checked') {
					alert('必须认真阅读并同意易百教程的《使用协议》方可注册使用！');
					isValid = false;
				}

				if (isValid == true) {
					$("#form").submit();
				}
				return false;
			})
		})
	</script>
	
